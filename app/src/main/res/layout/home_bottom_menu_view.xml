<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlContent"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivMenuIcon"
            android:padding="10dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_language_24"
            android:layout_alignParentStart="true"
            app:tint="@color/tvColor" />

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_toEndOf="@id/ivMenuIcon"
            android:text="Change Language"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/tvColor"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/ivChevron"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_chevron_right"
            android:layout_alignParentEnd="true"
            app:tint="@color/tvColor" />


    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tvColor"
        android:layout_below="@id/rlContent"/>



</RelativeLayout>