<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<RelativeLayout
    android:background="@color/bgColorWall"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/ivHomeLogo"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_notification"
            android:layout_alignParentStart="true"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"

            android:layout_centerVertical="true"
            android:background="@color/grey_80"
            android:layout_toEndOf="@id/ivHomeLogo"/>

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/tvColor"
            android:layout_marginStart="5dp"
            android:textSize="22sp"
            android:layout_toEndOf="@id/ivHomeLogo"
            android:fontFamily="@font/tommy_regular"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="English"
            android:padding="4dp"
            android:drawableEnd="@drawable/ic_expand_arrow"
            android:background="@drawable/language_curve_art"
            android:textSize="18sp"
            android:textColor="@color/tvColor"
            android:fontFamily="@font/tommy_regular"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ivOptionsMenu"/>



        <ImageView
            android:id="@+id/ivOptionsMenu"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:rotation="90"
            android:src="@drawable/ic_overflow" />


    </RelativeLayout>

    <TextView
        android:layout_below="@id/rlToolbar"
        android:id="@+id/tvBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tommy_regular"
        android:gravity="center"
        android:textColor="@color/tvColor"
        android:padding="25dp"
        android:text="@string/app_full_name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMainMenu"
        tools:listitem="@layout/home_gridview"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:itemCount="6"
        android:layout_below="@id/tvBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>

</layout>